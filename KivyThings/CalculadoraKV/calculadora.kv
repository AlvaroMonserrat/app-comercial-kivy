
#:import C kivy.utils.get_color_from_hex
#:set hexCOR_FUNDO_BT C("E1E1E1")
#:set hexCOR_FUNDO_BT_BORD C("B2B2B2")

<NumeralButton@Button>:
    font_size: "40sp"
    color: 0,0,0,1
    background_color: 0,0,0,0

    canvas.before:
        Color:
            rgba: hexCOR_FUNDO_BT if self.state=='normal' else hexCOR_FUNDO_BT_BORD
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25,]

<SignalButton@Button>:
    font_size: "70sp"

<MiCalculadora@GridLayout>:
    rows: 5
    padding: "10sp"
    spacing: "10sp"

    numeros: ti_entrada

    BoxLayout:
        spacing: "7sp"
        TextInput:
            id: ti_entrada
            font_size: "110sp"
            multiline: False
            readonly: True


    BoxLayout:
        spacing: "7sp"
        NumeralButton:
            text: "7"
            on_press: ti_entrada.text += self.text
        NumeralButton:
            text: "8"
            on_press: ti_entrada.text += self.text
        NumeralButton:
            text: "9"
            on_press: ti_entrada.text += self.text
        SignalButton:
            text: "+"
            on_press: ti_entrada.text += self.text




    BoxLayout:
        spacing: "7sp"
        NumeralButton:
            text: "4"
            on_press: ti_entrada.text += self.text
        NumeralButton:
            text: "5"
            on_press: ti_entrada.text += self.text
        NumeralButton:
            text: "6"
            on_press: ti_entrada.text += self.text
        SignalButton:
            text: "-"
            on_press: ti_entrada.text += self.text
    BoxLayout:
        spacing: "7sp"
        NumeralButton:
            text: "1"
            on_press: ti_entrada.text += self.text
        NumeralButton:
            text: "2"
            on_press: ti_entrada.text += self.text
        NumeralButton:
            text: "3"
            on_press: ti_entrada.text += self.text
        SignalButton:
            text: "*"
            on_press: ti_entrada.text += self.text
    BoxLayout:
        spacing: "7sp"
        SignalButton:
            text: "AC"
            font_size: "40sp"
            on_press: ti_entrada.text = ""
        NumeralButton:
            text: "0"
            on_press: ti_entrada.text += self.text
        SignalButton:
            text: "="
            on_press: ti_entrada.text = str(eval(ti_entrada.text))
        SignalButton:
            text: "/"
            on_press: ti_entrada.text += self.text


